<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true"
    android:id="@+id/abc"
    android:orientation="vertical"
    android:background="@color/fullTransparent"
    tools:context="com.phptravelsnative.Activities.HotelsLayout">




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/fullTransparent"
            android:id="@+id/auto_layout"
            >


            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:paddingStart="10dp"
                android:background="@color/white_transparent"
                android:paddingEnd="10dp"
                android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
        <AutoCompleteTextView
            android:hint="@string/hint_hotel"
            android:id="@+id/tour_auto_search"
            android:layout_width="match_parent"
            android:drawableStart="@drawable/ic_search_hint"
            android:layout_height="70dp"
            android:background="@color/fullTransparent"
            android:textDirection="ltr"
            android:paddingRight="10dp"
            android:layoutDirection="ltr"
            android:textSize="16sp"
            android:popupBackground="#ffffff"
            />
                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:id="@+id/clearButton"
                    android:textDirection="ltr"
                    android:layoutDirection="ltr"
                    android:visibility="gone"
                    android:src="@drawable/text_field_clear_btn"
                    android:layout_alignRight="@+id/tour_auto_search"
                    android:layout_centerVertical="true"
                    />
    </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height= "0.5dp"
                android:background="@color/light_black" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="5dp"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_marginTop="2dp"
                    android:id="@+id/monthin"
                    android:layout_marginEnd="10dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/ic_calender_from"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/date_from"
                    android:onClick="OnClickHotelSelect"
                    android:text="15 May 2015"
                    android:gravity="center_vertical"
                    android:textSize="17sp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/to"
                    android:textColor="@color/Dark_blue"
                    android:layout_marginStart="10dp"
                    android:textSize="18sp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/date_to"
                    android:onClick="OnClickHotelSelect"
                    android:text="15 May 2015"
                    android:layout_marginStart="10dp"
                    android:textSize="17sp"
                    />

                </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height= "0.5dp"
                android:layout_marginTop="20dp"
                android:background="@color/light_black" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="5dp"
                    android:layout_height="wrap_content">


                    <com.phptravelsnative.utality.Views.LightSpinner
                        android:layout_width="75dp"
                        android:layout_height="wrap_content"
                        android:text="ADULT 0"
                        android:padding="5dp"
                        android:id="@+id/adult"
                        android:layout_centerVertical="true"
                        android:textSize="15sp"
                        app:type="adult"
                        android:background="@android:color/transparent"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:adjustViewBounds="true"
                        android:layout_marginStart="63dp"
                        android:layout_centerVertical="true"
                        android:id="@+id/spinner_icon_adult"
                        android:src="@drawable/ic_action_name"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:layout_height="wrap_content">

                    <com.phptravelsnative.utality.Views.LightSpinner
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="CHILD 0"
                        android:padding="5dp"
                        android:layout_centerVertical="true"
                        android:id="@+id/child"
                        android:textSize="15sp"
                        app:type="child"
                        android:background="@android:color/transparent"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:adjustViewBounds="true"
                        android:layout_marginStart="60dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_action_name"
                        />
                </RelativeLayout>


            </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height= "0.5dp"
                    android:layout_marginTop="20dp"
                    android:background="@color/light_black" />
            </LinearLayout>



            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="@string/search"
                android:textSize="18sp"
                android:background="@drawable/ripple"
                android:textColor="@color/white"
                android:id="@+id/search_hotels"
                />


        </LinearLayout>
</RelativeLayout>
