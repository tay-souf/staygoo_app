<com.phptravelsnative.utality.lib.Parallex.NotifyingScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:scrollbars="none"
    tools:context="com.phptravelsnative.Fragments.SecondScrollViewFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:showDividers="middle">

        <include layout="@layout/header_placeholder" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/transparent">

            <android.support.v7.widget.CardView
                android:id="@+id/from_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:weightSum="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="1">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="80dp"
                            android:layout_marginStart="15dp"
                            android:layout_weight="0.6"
                            android:gravity="center_vertical">


                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="40dp"
                                android:adjustViewBounds="true"
                                android:src="@drawable/ic_car_from" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/pick_up"
                                    android:layout_marginStart="12dp"
                                    android:textColor="@color/aluminum"
                                    android:textSize="14sp" />

                                <Spinner
                                    android:id="@+id/location_from"
                                    android:layout_width="wrap_content"
                                    android:layout_height="40dp"
                                    android:gravity="center_horizontal" />
                            </LinearLayout>


                        </LinearLayout>

                        <View
                            android:layout_width="0.3dp"
                            android:layout_height="match_parent"
                            android:background="@color/light_black" />

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="0.4"
                            android:adjustViewBounds="true"
                            android:src="@drawable/ic_arrow_from" />
                    </LinearLayout>


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/light_black" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="1">

                        <LinearLayout
                            android:id="@+id/date_check_in"
                            android:layout_width="0dp"
                            android:layout_height="80dp"
                            android:layout_marginStart="15dp"
                            android:layout_weight="0.6"
                            android:gravity="center_vertical">


                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="40dp"
                                android:adjustViewBounds="true"
                                android:src="@drawable/ic_calender_from" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/date"
                                    android:layout_marginStart="12dp"
                                    android:textColor="@color/aluminum"
                                    android:textSize="15sp" />

                                <TextView
                                    android:id="@+id/pickup_date"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="12dp"
                                    android:text="22/22/2016"
                                    android:textColor="@color/full_black"
                                    android:textSize="15sp" />
                            </LinearLayout>


                        </LinearLayout>

                        <View
                            android:layout_width="0.3dp"
                            android:layout_height="match_parent"
                            android:background="@color/light_black" />

                        <LinearLayout
                            android:id="@+id/time_from_picker"
                            android:layout_width="0dp"
                            android:layout_height="80dp"
                            android:layout_weight="0.4"
                            android:gravity="center_vertical">


                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="40dp"
                                android:adjustViewBounds="true"
                                android:layout_marginStart="10dp"
                                android:src="@drawable/ic_from_clock" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="12dp"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/time"
                                    android:textColor="@color/aluminum"
                                    android:textSize="15sp" />

                                <TextView
                                    android:id="@+id/time_pickup"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="22:22"
                                    android:textColor="@color/full_black"
                                    android:textSize="15sp" />

                            </LinearLayout>


                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>
            >

            <android.support.v7.widget.CardView
                android:id="@+id/to_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/from_layout"
                android:layout_marginBottom="6dp"
                android:layout_marginEnd="6dp"
                android:layout_marginStart="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:weightSum="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="1">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="80dp"
                            android:layout_marginStart="15dp"
                            android:layout_weight="0.6"
                            android:gravity="center_vertical">


                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="40dp"
                                android:adjustViewBounds="true"
                                android:src="@drawable/ic_car_to" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="12dp"
                                    android:text="@string/dropoff_location"
                                    android:textColor="@color/aluminum"
                                    android:textSize="15sp" />

                                <Spinner
                                    android:id="@+id/location_to"
                                    android:layout_width="wrap_content"
                                    android:layout_height="40dp"
                                    android:gravity="center_horizontal" />
                            </LinearLayout>


                        </LinearLayout>

                        <View
                            android:layout_width="0.3dp"
                            android:layout_height="match_parent"
                            android:background="@color/light_black" />

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="0.4"
                            android:adjustViewBounds="true"
                            android:src="@drawable/ic_arrow_to" />
                    </LinearLayout>


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/light_black" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="1">

                        <LinearLayout
                            android:id="@+id/date_check_out"
                            android:layout_width="0dp"
                            android:layout_height="80dp"
                            android:layout_marginStart="15dp"
                            android:layout_weight="0.6"
                            android:gravity="center_vertical">


                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="40dp"
                                android:adjustViewBounds="true"
                                android:src="@drawable/ic_calender_to" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="12dp"
                                    android:text="@string/date"
                                    android:textColor="@color/aluminum"
                                    android:textSize="15sp" />

                                <TextView
                                    android:id="@+id/drop_date"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="12dp"
                                    android:text="11/11/2016"
                                    android:textColor="@color/full_black"
                                    android:textSize="15sp" />
                            </LinearLayout>


                        </LinearLayout>

                        <View
                            android:layout_width="0.3dp"
                            android:layout_height="match_parent"
                            android:background="@color/light_black" />

                        <LinearLayout
                            android:id="@+id/time_to_picker"
                            android:layout_width="0dp"
                            android:layout_height="80dp"
                            android:layout_weight="0.4"
                            android:gravity="center_vertical">


                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="40dp"
                                android:layout_marginStart="15dp"
                                android:adjustViewBounds="true"
                                android:src="@drawable/ic_to_clock" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="12dp"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/time"
                                    android:textColor="@color/aluminum"
                                    android:textSize="15sp" />

                                <TextView
                                    android:id="@+id/time_drop"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="22:22"
                                    android:textColor="@color/full_black"
                                    android:textSize="15sp" />

                            </LinearLayout>


                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:id="@+id/booking_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/to_layout"
                android:layout_marginBottom="6dp"
                android:layout_marginEnd="6dp"
                android:layout_marginStart="6dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/update"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:background="@color/green"
                        android:text="@string/update"
                        android:textColor="@color/white" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@id/update"
                        android:id="@+id/hide">


                    <TextView
                        android:id="@+id/price_car"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="USD $ 126"
                        android:layout_marginStart="10dp"
                        android:textColor="@color/full_black"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:id="@+id/tex_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/price_car"
                        android:layout_marginStart="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/tax_amp_vat"
                            android:textColor="@color/full_black"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/tax"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="  USD $ 0 "
                            android:textColor="@color/full_black"
                            android:textSize="15sp"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/deposite_now"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_below="@+id/tex_layout"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/deposite_now"
                            android:textColor="@color/full_black"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/deposite"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="  USD $ 0"
                            android:textColor="@color/full_black"
                            android:textSize="15sp"
                            />
                    </LinearLayout>

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/deposite_now"
                        android:background="@drawable/ripple"
                        android:text="@string/book"
                        android:layout_marginTop="20dp"
                        android:id="@+id/booking"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        />
                    </RelativeLayout>

                </RelativeLayout>

            </android.support.v7.widget.CardView>

        </RelativeLayout>

    </LinearLayout>
</com.phptravelsnative.utality.lib.Parallex.NotifyingScrollView>