<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fullTransparent">

<LinearLayout
    android:id="@+id/abc"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fullTransparent"
    android:fitsSystemWindows="true"
    android:gravity="center_horizontal"
    android:orientation="vertical"
  >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:background="@color/white_transparent"
        android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <AutoCompleteTextView
        android:id="@+id/car_from"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginBottom="4dp"
        android:textDirection="ltr"
        android:paddingRight="10dp"
        android:layoutDirection="ltr"
        android:background="@color/fullTransparent"
        android:textSize="16sp"
        android:drawableStart="@drawable/ic_search_hint"
        android:hint="@string/location_from"
        android:popupBackground="#ffffff" />

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:id="@+id/clearButton"
            android:textDirection="ltr"
            android:visibility="gone"
            android:layoutDirection="ltr"
            android:src="@drawable/text_field_clear_btn"
            android:layout_alignRight="@+id/car_from"
            android:layout_centerVertical="true"
            />
</RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:layout_height="0.5dp"
        android:background="@color/light_black" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <AutoCompleteTextView
        android:hint="@string/location_to"
        android:id="@+id/car_to"
        android:layout_width="match_parent"
        android:drawableStart="@drawable/ic_search_hint"
        android:layout_height="70dp"
        android:background="@color/fullTransparent"
        android:textDirection="ltr"
        android:paddingRight="10dp"
        android:layoutDirection="ltr"
        android:textSize="16sp"
        android:popupBackground="#ffffff"
        />
        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:id="@+id/clearButton_to"
            android:textDirection="ltr"
            android:layoutDirection="ltr"
            android:visibility="gone"
            android:src="@drawable/text_field_clear_btn"
            android:layout_alignRight="@+id/car_to"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:layout_height="0.5dp"

        android:background="@color/light_black" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:background="@color/fullTransparent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/monthin"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="2dp"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_calender_from" />

        <TextView
            android:id="@+id/date_from"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:onClick="OnClickHotelSelect"
            android:text="15 May 2015"
            android:textSize="17sp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="@string/to"
            android:textColor="@color/Dark_blue"
            android:textSize="18sp"
            />

        <TextView
            android:id="@+id/date_to"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:onClick="OnClickHotelSelect"
            android:text="15 May 2015"
            android:textSize="17sp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:background="@color/light_black"
         />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@color/fullTransparent"
        android:weightSum="1"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="2dp"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_from_clock" />

        <LinearLayout
            android:layout_width="0dp"
            android:orientation="horizontal"
            android:layout_weight="0.9"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content">

        <TextView
            android:id="@+id/time_from"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:onClick="onTimeSeter"
            android:text="22:22"
            android:textSize="17sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="@string/to"
            android:textColor="@color/Dark_blue"
            android:layout_gravity="center_horizontal"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/time_to"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:onClick="onTimeSeter"
            android:text="22:22"
            android:textSize="17sp" />

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="20dp"

        android:background="@color/light_black"
         />

    </LinearLayout>
    <Button
        android:id="@+id/search_hotels"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/ripple"
        android:text="@string/search"
        android:textColor="@color/white"
        android:textSize="20sp"
        />
</LinearLayout>
</RelativeLayout>